{
  "name": "bbzcloud",
  "version": "2.1.0",
  "description": "Die Desktop-App für die BBZ Cloud - eine All-in-One-Plattform für Unterricht und Zusammenarbeit",
  "main": "public/electron.js",
  "homepage": "./",
  "bugs": {
    "url": "https://github.com/dclausen01/bbzcloud-2/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Dennis Clausen",
    "email": "dennis.clausen@bbz-rd-eck.de",
    "url": "https://github.com/dclausen01"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.27.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@uiw/react-md-editor": "^4.0.8",
    "better-sqlite3": "^12.4.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.19",
    "fs-extra": "^11.3.2",
    "keytar": "^7.9.0",
    "playwright": "^1.55.1",
    "react": "^18.3.1",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "node-gyp": "^11.4.2",
    "wait-on": "^9.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env PUBLIC_URL=./ react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently --kill-others \"cross-env BROWSER=none npm start\" \"wait-on -t 60000 http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -mwl",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "cross-env LC_ALL=C npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --linux --win --publish=always",
    "release:mac": "npm run build && electron-builder --mac --publish=always",
    "update-deps": "npm update && npm audit fix",
    "check-updates": "npm outdated"
  },
  "build": {
    "appId": "ch.bbz.multicloud",
    "productName": "BBZ Cloud",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/images/icon.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "shortcutName": "BBZ Cloud",
      "createDesktopShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/images/icon.png",
      "category": "public.app-category.education",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman",
        "rpm"
      ],
      "icon": "assets/images/icon.png",
      "category": "Education",
      "desktop": {
        "entry": {
          "Name": "BBZ Cloud",
          "Comment": "Die Desktop-App für die BBZ Cloud",
          "Categories": "Education;Network;",
          "StartupWMClass": "BBZ Cloud"
        }
      }
    },
    "nsis": {
      "differentialPackage": false
    },
    "dmg": {
      "title": "BBZ Cloud",
      "icon": "assets/images/icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "dclausen01",
      "repo": "bbzcloud-2"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}